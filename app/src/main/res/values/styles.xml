<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Light">-->
        <!--&lt;!&ndash;-->
            <!--Theme customizations available in newer API levels can go in-->
            <!--res/values-vXX/styles.xml, while customizations related to-->
            <!--backward-compatibility can go here.-->
        <!--&ndash;&gt;-->
    <!--</style>-->



	<style name="WindowTitleBackground">
		<item name="android:background">@color/titlebackgroundcolor</item>
	</style>

	<style name="NormalText" parent="@android:style/TextAppearance">
		<item name="android:textSize">@dimen/normal_font</item>
		<item name="android:textColor">@color/main_fg</item>
	</style>

	<style name="BATextViewExtraLargeTextView" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/extra_large_font</item>
	</style>

    <style name="NormalTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/main_fg</item>
    </style>

    <style name="NumericEditText" parent="@style/editTextStyle">
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

	<style name="CustomTextTitle2Style" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/large_font</item>
	</style>

    <style name="SmallLabel" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/main_fg</item>
    </style>

	<style name="HeaderStyle" parent="@android:style/Widget.TextView">
		<item name="android:textSize">@dimen/large_font</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:height">@dimen/header_hight</item>
        <item name="android:paddingLeft">10dp</item>
		<item name="android:background">@color/semi_transparent_accent_color</item>
        <item name="android:textColor">@color/main_fg</item>
	</style>

	<style name="BAListView" parent="@android:style/Widget.ListView">
		<item name="android:divider">@null</item>
        <item name="android:dividerHeight">@dimen/list_divider_height</item>
	</style>

	<style name="BAExListView" parent="@android:style/Widget.ExpandableListView">
		<item name="android:divider">@null</item>
		<item name="android:dividerHeight">@dimen/list_divider_height</item>
	</style>

	<style name="ListItemChecker" >
		<item name="android:checkMark">?android:attr/listChoiceIndicatorMultiple</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:id">@id/list_item_checkbox</item>
	</style>

	<style name="BAPicture"  >
		<item name="android:width">64dp</item>
		<item name="android:layout_width">64dp</item>
		<item name="android:height">64dp</item>
		<item name="android:layout_height">64dp</item>
	</style>

    <style name="AboutTheme" parent="LoginTheme">
        <item name="actionBarSize">90dp</item>
    </style>

	<style name="LoginTheme" parent="BATheme">
    <item name="actionBarSize">60dp</item>
    <item name="android:actionBarStyle">@style/LoginActionBar</item>
</style>

	<style name="LoginActionBar" parent="@style/Widget.AppCompat.ActionBar">
		<item name="android:background">@android:color/transparent</item>
		<item name="background">@android:color/transparent</item>
		<item name="android:height">80dp</item>
		<item name="height">80dp</item>
	</style>

	<style name="CustomTitlePageIndicator">
		<item name="android:background">#00FF0000</item>
		<item name="footerColor">#FFAA2222</item>
		<item name="footerLineHeight">0dp</item>
		<item name="footerIndicatorHeight">0dp</item>
		<item name="footerIndicatorStyle">underline</item>
		<item name="android:textColor">@color/subtle</item>
		<item name="selectedColor">@color/main_fg</item>
		<item name="selectedBold">false</item>
		<item name="android:textSize">@dimen/extra_extra_large_font</item>
		<!--<item name="android:fontFamily" tools:ignore="NewApi">sans-serif-light</item>-->
		<item name="titlePadding">30dp</item>
	</style>


	<style name="CustomLinePageIndicator">
		<item name="strokeWidth">0dp</item>
		<item name="lineWidth">0dp</item>
		<item name="unselectedColor">#FF888888</item>
		<item name="selectedColor">#FF880000</item>
	</style>


	<style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
		<item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
		<item name="android:textColor">#FFFFFFFF</item>
		<item name="android:textSize">16sp</item>
		<item name="android:dividerPadding">10dp</item>
		<item name="android:showDividers">middle</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:fadingEdge">horizontal</item>
		<item name="android:fadingEdgeLength">8dp</item>
	</style>

	<style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
		<item name="android:typeface">monospace</item>
	</style>

	<style name="CustomUnderlinePageIndicator">
		<item name="selectedColor">#FFCC0000</item>
		<item name="android:background">#FFCCCCCC</item>
		<item name="fadeLength">1000</item>
		<item name="fadeDelay">1000</item>
	</style>

    <style name="FlatImageButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="android:minHeight">48dp</item>

        <item name="android:minWidth">48dp</item>
    </style>

	<style name="LinkButton">
		<item name="android:background">@null</item>
		<item name="android:textColor">@drawable/link_button</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
	</style>

    <style name="AccentLinkButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@drawable/accent_link_button</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>




    <style name="StyledIndicators" parent="Theme.AppCompat">
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiTitlePageIndicatorStyle">@style/CustomTitlePageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="vpiUnderlinePageIndicatorStyle">@style/CustomUnderlinePageIndicator</item>
        <item name="windowActionBarOverlay">true</item> <!-- for ActionBarSherlock -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarSize">110dp</item>
    </style>



    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:height">110dp</item>
        <item name="height">110dp</item>
    </style>



</resources>