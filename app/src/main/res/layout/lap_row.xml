<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:textColor="@color/subtle" android:id="@+id/tbLapNumber" android:textSize="@dimen/extra_extra_large_font" android:layout_width="wrap_content" android:layout_height="match_parent" />

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/tbLapTime" android:textColor="@color/accent_color" android:textSize="@dimen/large_font" android:layout_width="wrap_content" android:layout_height="match_parent" />
            <TextView android:id="@+id/tbTotalTime" android:layout_marginLeft="12dp" android:textSize="@dimen/large_font" android:layout_width="wrap_content" android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="fill_parent"
                      android:layout_weight="0">
            <TextView android:id="@+id/tbDistanceType" android:textColor="@color/subtle" android:textSize="@dimen/large_font" android:layout_width="wrap_content" android:layout_height="match_parent" />
            <ImageView android:id="@+id/imgRecord" android:src="@drawable/records32" android:layout_width="32dp" android:layout_height="32dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>