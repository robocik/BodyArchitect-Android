<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="7dp" android:layout_height="fill_parent" android:id="@+id/pnlSyncState" />
    <LinearLayout android:layout_marginLeft="@dimen/margin_between_controls" android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
         <TextView android:id="@+id/tbDateTime" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/tbStatus" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <LinearLayout android:layout_marginTop="@dimen/margin_between_label" android:id="@+id/pnlEntries" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal"/>
        <TextView android:id="@+id/tbGpsCoordinates" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="@dimen/medium_font" android:text="@string/synchronization_item_gps_coordinates"/>
    </LinearLayout>
</LinearLayout>