<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="match_parent">


	<com.quasardevelopment.bodyarchitect.client.ui.controls.TrainingDaySelectorControl android:layout_marginLeft="18dp"
			android:id="@+id/dayCtrl"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"/>

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
				  android:layout_height="wrap_content" android:paddingLeft="28dp" android:paddingRight="10dp">
		<TextView android:text="@string/today_link_calendar" android:textSize="@dimen/large_font" style="@style/LinkButton" android:id="@+id/btnCalendar" android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="bottom"/>

		<View android:layout_width="fill_parent"
			  android:layout_height="0dp" android:layout_weight="1"/>
		<ImageButton android:id="@+id/btnRefresh" style="@style/FlatImageButton" android:src="@drawable/navigation_refresh" android:layout_width="wrap_content"
					 android:layout_height="wrap_content" android:layout_gravity="bottom"
                     />
	</LinearLayout>


</LinearLayout>