<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView android:text="@string/my_account_fragment_my_points" android:textColor="@color/subtle" android:layout_width="wrap_content"  android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"/>
    <TextView android:id="@+id/tbPoints" android:text="(30)" android:textSize="@dimen/huge_font" android:layout_width="wrap_content"  android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal" android:layout_marginTop="-24dp"/>

    <Button android:id="@+id/btnBuy" android:text="@string/my_account_fragment_buy_button" android:layout_width="wrap_content"  android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    <Button style="@style/AccentLinkButton" android:id="@+id/tbAccountType" android:text="(Instructor)"  android:textSize="@dimen/extra_extra_large_font" android:layout_width="wrap_content"  android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"/>

    <TextView android:text="@string/my_account_fragment_description" android:textColor="@color/subtle" android:layout_width="wrap_content"  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal" android:gravity="center_horizontal"
                  android:layout_marginTop="12dp"/>
</LinearLayout>
 </ScrollView>
