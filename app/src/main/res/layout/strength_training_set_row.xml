<?xml version="1.0" encoding="utf-8"?>

<com.quasardevelopment.bodyarchitect.client.ui.controls.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
          android:orientation="horizontal" android:layout_height="match_parent">
    <CheckedTextView  style="@style/ListItemChecker"
            android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:layout_weight="0"
            android:gravity="center_vertical"/>
    <LinearLayout android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <TextView android:id="@+id/strength_training_set_resttime"  android:textColor="@color/subtle"  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"/>

        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" >
            <TextView android:id="@+id/strength_training_set_position" android:textSize="@dimen/extra_extra_large_font" android:layout_width="wrap_content" android:layout_height="match_parent"
					  android:layout_marginRight="24dp"/>

            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="fill_parent"
							  android:layout_weight="1" android:gravity="bottom" android:layout_marginBottom="-8dp">
					<View android:layout_width="wrap_content" android:layout_height="wrap_content"
						  android:layout_weight="1"/>
                    <TextView style="@style/BATextViewExtraLargeTextView" android:id="@+id/strength_training_set_reps" android:layout_width="wrap_content" android:layout_height="wrap_content"
							/>
                    <TextView style="@style/BATextViewExtraLargeTextView" android:textColor="@color/subtle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="x"
							  android:singleLine="false"
							  android:gravity="center"  android:maxWidth="100dp" android:layout_weight="1"/>
                    <TextView style="@style/BATextViewExtraLargeTextView" android:id="@+id/strength_training_set_weight" android:layout_width="wrap_content" android:layout_height="wrap_content"
							  android:text="123" android:gravity="right"/>
                    <TextView android:textColor="@color/subtle" android:id="@+id/strength_training_set_weight_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="kg"  />
					<View android:layout_width="wrap_content" android:layout_height="wrap_content"
						  android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="fill_parent"
							  android:layout_weight="1" android:gravity="center_vertical">
                    <ImageView android:id="@+id/strength_training_set_item_record"  android:layout_width="16dip" android:layout_height="16dip" android:src="@drawable/records32"
							   android:layout_marginRight="6dp"/>
                    <TextView android:id="@+id/strength_training_set_item_type_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="type"
							  android:textColor="@color/accent_color" android:layout_marginRight="6dp"/>
                    <TextView android:id="@+id/strength_training_set_item_dropset_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sets: 2"
							  android:layout_marginRight="6dp"/>
                    <TextView android:id="@+id/strength_training_set_item_superslow_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sets: 2"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@id/drag_handle" android:layout_width="wrap_content"  android:layout_height="match_parent" android:layout_weight="0">
        <ImageView
                android:id="@+id/img_drag_handle"
                android:background="@drawable/content_import_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</com.quasardevelopment.bodyarchitect.client.ui.controls.CheckableLinearLayout>
