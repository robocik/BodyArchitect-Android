<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="horizontal"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">

	<LinearLayout android:layout_width="wrap_content" android:orientation="vertical" android:layout_height="match_parent"
				  android:layout_weight="0">
		<com.quasardevelopment.bodyarchitect.client.ui.controls.BAPicture style="@style/BAPicture"  android:id="@+id/imgUser"/>
	</LinearLayout>
	<LinearLayout android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent"
				  android:layout_weight="1">
		<TextView android:id="@+id/tbUsername" android:textSize="@dimen/large_font" android:layout_width="wrap_content"
				  android:layout_height="wrap_content"/>

		<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content"  android:layout_width="fill_parent">
			<ImageView android:id="@+id/imgVirtualCustomer" android:src="@drawable/virtual_customer" android:layout_width="16dp" android:layout_height="16dp" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>