<?xml version="1.0" encoding="utf-8"?>

<com.quasardevelopment.bodyarchitect.client.ui.controls.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">

    <CheckedTextView
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:id="@+id/list_item_checkbox"
            android:layout_width="wrap_content" android:layout_height="fill_parent"
            android:layout_weight="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"/>

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
        <TextView android:id="@+id/strength_training_set_resttime"  android:textColor="@color/subtle"  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"/>
        <TextView  android:id="@+id/cardio_training_session_item_position" android:textColor="@color/subtle" android:textSize="@dimen/large_font" android:layout_width="wrap_content"  android:layout_height="wrap_content" />
        <LinearLayout android:layout_marginTop="3dp" android:orientation="horizontal"  android:layout_width="wrap_content"  android:layout_height="wrap_content" >
            <ImageView android:layout_width="32dip"  android:layout_height="32dip" android:src="@drawable/clock"
					   android:layout_gravity="center_vertical"/>
            <TextView  android:id="@+id/cardio_training_session_time" android:textSize="@dimen/extra_large_font" android:layout_width="wrap_content"  android:layout_height="wrap_content"
					   android:layout_marginLeft="6dp" android:layout_marginRight="6dp"
					   android:layout_gravity="center_vertical"/>
            <ImageView android:id="@+id/strength_training_set_item_record"  android:layout_width="32dip" android:layout_height="32dip" android:src="@drawable/records32"
					   android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:layout_marginTop="3dp" android:layout_marginLeft="38dp">
            <TextView android:id="@+id/cardio_training_session_item_distance" android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:layout_marginRight="3dp"/>
            <TextView android:id="@+id/cardio_training_session_item_distance_type" android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:layout_marginRight="8dp"/>
            <TextView android:id="@+id/cardio_training_session_item_calories" android:textColor="@color/accent_color" android:layout_width="wrap_content" android:layout_height="wrap_content"
					  android:layout_marginRight="3dp"/>
            <TextView android:id="@+id/cardio_training_session_item_calories_type" android:text="kcal" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:id="@id/drag_handle" android:layout_width="wrap_content"  android:layout_height="match_parent" android:layout_weight="0">
        <ImageView
                android:id="@+id/img_drag_handle"
                android:background="@drawable/content_import_export"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
    </LinearLayout>
</com.quasardevelopment.bodyarchitect.client.ui.controls.CheckableLinearLayout>
