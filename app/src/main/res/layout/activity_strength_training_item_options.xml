<?xml version="1.0" encoding="utf-8"?>

<LinearLayout orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
					  android:layout_width="match_parent"
					  android:layout_height="match_parent" android:orientation="vertical">
	<ScrollView android:layout_width="match_parent"
				android:layout_height="wrap_content">
		<LinearLayout android:orientation="vertical"
					  android:layout_width="match_parent"
					  android:layout_height="match_parent">
			<com.quasardevelopment.bodyarchitect.client.ui.controls.TimerControl android:id="@+id/ctrlTimer"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>

			<TextView android:text="@string/strength_training_options_activity_header_more" style="@style/HeaderStyle"/>

			<com.quasardevelopment.bodyarchitect.client.ui.controls.LabelAccountTypeAwarness android:layout_marginTop="@dimen/margin_between_controls" android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:text="@string/strength_training_item_options_activity_equipment" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
			<Spinner android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/strenght_training_doneway"/>
			<TextView android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:textColor="@color/subtle"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/strength_training_item_options_activity_equipment_description"  />

			<TextView android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:layout_marginTop="24dp" android:textColor="@color/subtle"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/comment"  />
			<EditText android:layout_marginLeft="6dp" android:layout_marginRight="6dp" android:id="@+id/txt_comment" android:layout_width="fill_parent" android:hint="@string/comment_watermark" android:layout_height="100dip" android:inputType="textMultiLine"/>


		</LinearLayout>
	</ScrollView>

	<View android:layout_width="wrap_content" android:layout_height="fill_parent" android:layout_weight="1"/>

	<com.quasardevelopment.bodyarchitect.client.ui.controls.AdControl android:id="@+id/ctrlAd" android:layout_width="wrap_content" android:layout_height="wrap_content"
												android:layout_gravity="center_horizontal"/>
</LinearLayout>
